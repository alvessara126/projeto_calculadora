<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Conversão de Tipos</title>
    <style type="text/css">
        .container{
            width: 95vw;
            height: 90vh;
           /* border: 1px solid blue;*/
            
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .form{
            border:1px solid #0fbcf9;
            padding: 10px;
            background: #9AECDB;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
    <form class="form">
        <p> Primeiro Dígito: <input type="number" id="digito1"> </p>
        <p> Segundo Dígito: <input type="number" id="digito2"> </p>
        <p>  <button type="button" onclick="calculadora(1)"> divisão</button></p>
        <p>  <button type="button" onclick="calculadora(2)"> soma </button></p>
        <p>  <button type="button" onclick="calculadora(3)"> subtração </button></p>
        <p>  <button type="button" onclick="calculadora(4)"> multiplicação </button></p>

        <p>Resultado:<input type="number" id="result" readonly></p>
    </form>
   </div>
    <script> 
        function calculadora(param){
            let digito1 = document.getElementById("digito1").value;
            let digito2 = document.getElementById("digito2").value;
        let resultado;
        if(param == 1){
            resultado = parseFloat(digito1) / parseFloat(digito2);
        }else if (param == 2){ 
            resultado = parseFloat(digito1) + parseFloat(digito2);
        }else if (param == 3){ 
            resultado = parseFloat(digito1) - parseFloat(digito2); 
        }else if (param == 4){ 
            resultado = parseFloat(digito1) * parseFloat(digito2);      
        }   
             document.getElementById("result").value = resultado;
}
   </script>
</body>
